<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoFinal.Services.Attendance"
             Title="Attendance">

    <CollectionView ItemsSource="{Binding Estudiantes}">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <StackLayout Orientation="Horizontal">
                    <Label Text="{Binding Nombre}" FontSize="18" />
                    <Label Text="{Binding Apellido}" FontSize="18" />
                    <Button Text="Editar" />
                    <Button Text="Eliminar" Clicked="OnDeleteStudentClicked" />
                </StackLayout>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>

</ContentPage>